<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHello"
    android:background="@color/background_activity_hello"
    >


    <EditText
        android:id="@+id/enter_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="@string/hint_town"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/found_town"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_below="@+id/enter_town"
        android:text="@string/bottom_found_town"
        android:layout_centerHorizontal="true"
        android:onClick="show_weather"
        android:textSize="24sp"
        android:background="@color/button_found_town"
        android:textColor="@color/white_text"
        android:fontFamily="serif"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-5dp"
        android:scaleType="fitEnd"
        android:src="@drawable/city" />

</RelativeLayout>